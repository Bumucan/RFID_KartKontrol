@model List<RFID_KartKontrol.Models.Kart>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Kartlar";
}

<h2 class="mb-4">Kart Yönetimi</h2>

<a class="btn btn-success mb-3" href="@Url.Action("AddKart", "Admin")">Yeni Kart Ekle</a>

<table class="table table-striped table-hover table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>#ID</th>
            <th>Kart UID</th>
            <th>Durum</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kart in Model)
        {
            <tr>
                <td>@kart.KartID</td>
                <td>@kart.KartUID</td>
                <td>
                    @if (kart.KayitliMi)
                    {
                        <span class="badge bg-success">Aktif</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Pasif</span>
                    }
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" href="@Url.Action("EditKart", "Admin", new { id = kart.KartID })">Düzenle</a>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("DeleteKart", "Admin", new { id = kart.KartID })">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
